<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            服务配置
            <small>云端couchDB数据库</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> KC配置</a></li>
            <li class="active">服务配置</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                <table id="kc_config" class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th class="">商家编号<span class="arrow asc"></span></th>
                        <th class="">OC账号<span class="arrow asc"></span></th>
                        <th class="">OC密码<span class="arrow asc"></span></th>
                        <th class="">DB账号<span class="arrow asc"></span></th>
                        <th class="">DB密码<span class="arrow asc"></span></th>
                        <th><label>操作</label></th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for(var i in mc_list) {%>
                    <tr>
                        <form action="" method="post">
                            <td><input type="text" name="mc_id" value="<%= mc_list[i].mc_id %>" readonly></td>
                            <td><input type="text" name="oc_user" class="value" value="<%= mc_list[i].oc_user %>" readonly></td>
                            <td><input type="text" name="oc_pwd" class="value" value="<%= mc_list[i].oc_pwd %>" readonly></td>
                            <td><input type="text" name="db_user" value="<%= mc_list[i].db_user %>" readonly></td>
                            <td><input type="text" name="db_pwd" class="value" value="<%= mc_list[i].db_pwd %>" readonly></td>
                            <td>
                                <button type="button" class="btn btn-primary btn-sm" onclick="editItem($(this))">编辑</button>
                                <button type="button" class="btn btn-warning btn-sm" onclick="deleteDBData($(this))">清空数据</button>
                                <button type="button" class="btn btn-danger btn-sm" onclick="deleteDBName($(this))">删除配置</button>
                            </td>
                        </form>
                    </tr>
                    <% } %>
                    </tbody>
                    <tfoot>
                    <tr>
                        <form id="config_form" action="" method="post">
                            <td><input type="text" name="mc_id" ></td>
                            <td><input type="text" name="oc_user" ></td>
                            <td><input type="text" name="oc_pwd" ></td>
                            <td><input type="text" name="db_user" ></td>
                            <td><input type="text" name="db_pwd" ></td>
                            <td><button type="button" class="btn btn-success btn-sm" onclick="addDBName($(this))">增加</button></td>
                        </form>
                    </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->

    </section>
    <!-- /.content -->
</div>